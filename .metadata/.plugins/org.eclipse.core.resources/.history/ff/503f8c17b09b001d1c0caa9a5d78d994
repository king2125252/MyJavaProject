<b>總資料筆數: 共<font color=blue><%=rowNumber%></font>筆</b>

  <nav>
  <ul class="pagination">
  <% String firstPage="disabled";
  if(pageIndex>=rowsPerPage){
  	firstPage="";
  }%>  
    <li class="page-item <%=firstPage%>">
      <a class="page-link" href="<%=request.getRequestURI()%>?whichPage=1">&laquo;</a>
    </li>
    
    <%if(whichPage != 1){%>
     <li class="page-item">
    	<a class="page-link" href="<%=request.getRequestURI()%>?whichPage=<%=whichPage-1%>"><%=whichPage-1%></a>
    </li>
    <%}%>
    
  <%if (pageNumber>0){%>
    <li class="page-item active">
    	<a class="page-link"><%=whichPage%></a>
    </li>
  <%}%>
    
    
    <%if(whichPage != pageNumber){%>
     <li class="page-item">
    	<a class="page-link" href="<%=request.getRequestURI()%>?whichPage=<%=whichPage+1%>"><%=whichPage+1%></a>
    </li>
    <%}%>
    
    
    <% String lastPage ="disabled";
    if(pageIndex<pageIndexArray[pageNumber-1]){
    	lastPage = "";
    }%>
    <li class="page-item <%=lastPage%>">
      <a class="page-link" href="<%=request.getRequestURI()%>?whichPage=<%=pageNumber%>">&raquo;</a>
    </li>
  </ul>
</nav>
